include mixins/comment

doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        title Document
        link(rel="stylesheet", href="/static/css/styles.css")
    body 
        div.comment_base
            div.comment_Top
                div.comment_Top_herder
                    a(href="/home") 
                        i.fa.fa-chevron-left
                    span 댓글
                    i.fa.fa-picture-o
                div.comment_Form
                    div.comment_Form.avatar
                        if loggedInUser.avartarUrl
                            img(src="/"+loggedInUser.avartarUrl)
                        else
                            i.fa.fa-user-circle-o
                    form.comment_Form.form#comment_Form(data-id = post)
                        input(type="text", placeholder="댓글 달기...", name="commentText")#comment_Form_input
                        button#comment_Form_btn 게시
            div.comment_Box
                each comment in comments
                    +comment(comment)
            div.comment_Bot
    script(src="https://kit.fontawesome.com/c9023371e9.js" crossorigin="anonymous")
    script(src="/static/js/main.js")
    script(src="/static/js/detail.js")