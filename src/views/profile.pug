extends base
include mixins/uploaded

block content
    include partials/header
    div.topProfile
        div.topProfile_pic
            i.fa.fa-user-circle-o
        div.topProfile_ect
            div.topProfile_1
                h1=loggedInUser.id
                if loggedInUser._id === id
                    a.profileLink(href="") 프로필 편집
                    a(href="")
                        i.fa.fa-cog
            div.topProfile_2
                div 
                    span 게시물
                    span=count
                div 
                    span 팔로워
                    span 0
                div 
                    span 팔로우
                    span 1
            span.topProfile_3=loggedInUser.name
    div.botProfile
        div.botProfile_tags
            div.botProfile_tags_one
                i.fa.fa-th
                span 게시물
            div.botProfile_tags_two
                i.fa.fa-star
                span 저장됨
            div.botProfile_tags_three
                i.fa.fa-bookmark-o
                span 태그됨
        div.profile_post
            each uploaded in uploads
                +uploaded(uploaded)